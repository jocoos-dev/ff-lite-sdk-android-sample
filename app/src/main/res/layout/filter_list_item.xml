<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_filter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/filter_border"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round10_white80"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/image_filter"
        app:layout_constraintStart_toStartOf="@+id/image_filter"
        app:layout_constraintTop_toBottomOf="@+id/image_filter" />

</androidx.constraintlayout.widget.ConstraintLayout>
